<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/white"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/txt_and_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/location_ic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_location_on_40"
            android:background="@color/white"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/address_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/img_btn"
            android:layout_toEndOf="@id/location_ic"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Address"/>

        <ImageView
            android:id="@+id/img_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:src="@drawable/baseline_directions_24"
            android:background="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/txt_and_btn"
        android:background="@color/black"/>

</RelativeLayout>